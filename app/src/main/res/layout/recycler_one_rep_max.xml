<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints"
    android:id="@+id/linearlayoutreps"
    android:orientation="vertical"

    >



    <ImageView
        android:id="@+id/photoexercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"

        />
    <TextView
        android:id="@+id/textexercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/teal_200"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="50sp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/photoexercise"
        />
    <EditText
        android:id="@+id/edittextreps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray1"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textColorHint="@color/gray1"
        android:inputType="numberDecimal"
        android:backgroundTint="@android:color/black"
        android:colorControlNormal="@color/black"
        android:colorControlActivated="@color/black"
        android:colorControlHighlight="@color/ap_gray"
        android:textAlignment="center"
        android:hint="Reps"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textexercise"
        />
    <EditText
        android:id="@+id/edittextweight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="@color/gray1"
        android:textColor="@color/gray1"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:inputType="numberDecimal"
        android:backgroundTint="@android:color/black"
        android:colorControlNormal="@color/black"
        android:colorControlActivated="@color/black"
        android:colorControlHighlight="@color/ap_gray"
        android:hint="Weight"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edittextreps"
        />

    <Spinner
        android:id="@+id/spinneronerepmweight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toBottomOf="@+id/edittextweight"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/Calculatereps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/teal_700"
        android:textColor="@color/white"

        android:text="Calcualte"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edittextweight"


        />

    <TextView
        android:id="@+id/textresultreps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:textStyle="bold|italic"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Calculatereps"
        />
</LinearLayout>

